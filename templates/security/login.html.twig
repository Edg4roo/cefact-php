{% extends 'base.html.twig' %}

{% block title %}Inicia sesión{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <body class="bg-grey">
    <main>
        <div class="container vh-100 d-flex flex-column justify-content-center">
            <div class=""></div>
            <div class="row">
                <div class="col-12 bg-orange">
                    <img src="/assets/images/logo_white.png" class="py-2 ps-3">
                </div>
            </div>
            <div class="row bg-grey shadow py-5">
                <div class="col-12 col-lg-6 ps-5">
                    <h1 class="mb-5">Acceso empresas</h1>
                    <form method="post">
                        <div class="mb-4">
                            <label for="username" class="form-label">Email</label>
                            <input type="email" class="form-control" id="username" name="_email" value="{{ last_username }}" placeholder="Introduce tu email">
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="_password"
                                   placeholder="Introduce tu contraseña">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="btn btn-darkorange text-white w-100 mt-5">Iniciar sesión</button>
                    </form>
                </div>
                <div class="col-12 col-lg-2"></div>
                <div class="col-12 col-lg-4">
                    <h3>¿Aún no tienes cuenta?</h3>
                    <div class="mt-5 fs-4"><i class="bi bi-clock text-darkorange me-2"></i>
                        <p class="d-inline">Regístrate en 5 minutos</p>
                    </div>
                    <div class="my-3 fs-4"><i class="bi bi-check-square text-darkorange me-2"></i>
                        <p class="d-inline">Sin complicaciones</p>
                    </div>
                    <div class="fs-4"><i class="bi bi-person-check-fill text-darkorange me-2"></i>
                        <p class="d-inline">Empieza ya mismo</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-center py-5">
                        <button type="submit" class="btn btn-white text-darkorange w-75 btn-outline-darkorange ">Registrarse</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
    </body>

{% endblock %}
