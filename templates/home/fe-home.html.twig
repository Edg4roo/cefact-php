{% extends 'base.html.twig' %}

{% block title %} CEFACT {% endblock %}

{% block body %}
    <body class="bg-grey">
    <header class="mt-4">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    LOGO
                </div>
                <div class="col-6 text-center">
                    <a type="button" class="btn btn-orange mx-3 text-light" href="{{ path('login') }}">Acceso tutores</a>
                    <a type="button" class="btn btn-outline-orange mx-3 text-darkorange" href="fe-login-empresas.html">Acceso empresas</a>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <img src="{{ asset('build/images/patternpad_header.svg') }}" alt="ACME logo">
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row mb-3">
                <div class="col-12 col-sm-8 d-flex flex-column align-items-center justify-content-center text-center">
                    <h1 class="fs-2"> Acercando a empresas con alumnos para un futuro mejor</h1>
                    <button type="button" class="btn btn-darkorange mt-3 px-5 text-light">Más información</button>
                </div>
                <div class="col-4 d-none d-sm-flex justify-content-center">
                    <img src="{{ asset('build/images/home1.png') }}" alt="ACME logo">
                </div>
            </div>
            <div class="row shadow p-5 mb-4 bg-body rounded">
                <div class="col-12 col-sm-5">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1"><i class="bi bi-geo-alt-fill fs-3"></i></span>
                        <input type="text" class="form-control" placeholder="¿Dónde quieres trabajar?"
                               aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="col-12 col-sm-5">
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1"><i
                                    class="bi bi-buildings-fill fs-3"></i></span>
                        <input type="text" class="form-control" placeholder="¿En que sector?" aria-label="Username"
                               aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="col-2 d-flex align-items-center justify-content-center">
                    <button class="btn btn-darkorange px-4 h-100">
                        <i class="bi bi-search fs-4 text-light"></i>
                    </button>
                </div>
            </div>
            <div class="row bg-orange rounded py-3 mb-5">
                <div class="col-12 d-flex justify-content-center align-items-center">
                    <h2 class="fs-3 text-light m-0">Consigue el talento que necesitas para tu empresa</h2>
                    <button class="btn btn-light px-5 mx-5 text-darkorange btn-outline-darkorange">
                        Vamos allá
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <p class="fs-2"><span class="text-darkorange">{{ trainingOffers|length }}</span> resultados</p>
                </div>
            </div>
            <div class="row gy-4">
                {% for trainingOffer in trainingOffers %}
                    {% include '_offer_card.html.twig' %}
                {% endfor %}
            </div>
        </div>
    </main>

    </body>
{% endblock %}